form(method="POST")
    fieldset
        legend Login
        div(class="clearfix")
            label(for="username") Username:
            div(class="input", id="username")
                input(class="xlarge", placeholder="Username (required)", id="xlInput", name="username", size="30", type="text")

        div(class="clearfix")
            label(for="password") Password:
            div(class="input", id="password")
                input(class="xlarge", placeholder="Password (required)", id="xlInput", name="password", size="30", type="text")

        div(class="clearfix")
            div(class="input", id="button")
                input(type="submit", class="btn primary", value="Register")